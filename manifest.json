{
  "manifest_version": 3,
  "name": "Bookmarklet Key Binder",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "execute_bookmarklet_s": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Execute the bookmarklet for ALT+S"
    },
    "execute_bookmarklet_c": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Execute the bookmarklet for ALT+C"
    },
    "execute_bookmarklet_e": {
      "suggested_key": {
        "default": "Alt+E"
      },
      "description": "Execute the bookmarklet for ALT+E"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
